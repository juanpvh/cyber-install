#REGRA PARA PHP7.2

check process php7.2-fpm with pidfile /run/php/php7.2-fpm.pid
    start program = "/etc/init.d/php7.2-fpm start"
    stop program  = "/etc/init.d/php7.2-fpm stop"
    if failed port 9070 type TCP then restart
	if cpu > 90% for 5 cycles then alert
    if 5 restarts within 5 cycles then timeout