#REGRA PARA PHP5.6
check process php5.6-fpm with pidfile /run/php/php5.6-fpm.pid
    start program = "/etc/init.d/php5.6-fpm start" 
    stop program  = "/etc/init.d/php5.6-fpm stop"
    if failed port 9000 type TCP then restart
    if cpu > 90% for 5 cycles then alert
	
#REGRA PARA PHP7.0

check process php7.0-fpm with pidfile /run/php/php7.0-fpm.pid
    start program = "/etc/init.d/php7.0-fpm start"
    stop program  = "/etc/init.d/php7.0-fpm stop"
    if failed port 9070 type TCP then restart
	if cpu > 90% for 5 cycles then alert